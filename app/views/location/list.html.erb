<center>
<script type="text/javascript" language="javascript"></script>


    <div id="divMnu" style="background-color:#CCCCFF; width: 200px auto; position:absolute; display:none; z-index:997; " onclick="">
        
        <table cellpadding=5 id="tblMnu" width="200px">
            
            <% s = [
                        ["Edit", "$('frmMain').action='/location/edit_hospital'; $('frmMain').submit()"], 
                        ["View Units", "$('frmMain').action='/location/show'; $('frmMain').submit()"]
                   ] 
            %>
            
            <% s.each{|p| %>
                <tr onmouseover="this.bgColor='#9999FF'; this.style.color='#FFFFFF'" onmouseout="this.bgColor='#CCCCFF'; this.style.color='#000000'" onmousedown="this.bgColor='#0066CC'" style="cursor:pointer">
                    <td onclick="$('divMnu').style.display='none'; <%= p[1] %>;">
                        <%= p[0] %>
                    </td>
                </tr>
            <% } %>
            
        </table>            
                                                        
    </div>
    

<h1>Available Hospitals</h1>

    <% form_tag ({:action => "index"}, {:id => "frmMain"}) do %>
    
        <input type="hidden" value="" name="selectId" id="selectId" />
        
        <table cellpadding=5 cellspacing=1>
            <tr>
                <th bgcolor="#999999" style="color: #FFFFFF">
                    Hospital Name
                </th>
                <th bgcolor="#999999" style="color: #FFFFFF">
                    Description
                </th>
            </tr>
            <tr>
                <td>
                </td>
                <td>
                </td>
            </tr>
            
            <% @i = 0 %>
            
            <% @locations.each{|loc| %>
                
                <tr id="row<%= @i %>" onmouseover="this.bgColor='#9999FF'; this.style.color='#FFFFFF'" onmouseout="this.bgColor='#FFFFFF'; this.style.color='#000000'" onmousedown="this.bgColor='#9999FF'; if(event.button==2){showMenu(event); $('selectId').value=<%= loc.location_id %>;}" onmouseup="this.bgColor='#EAEAEA'" style="cursor:pointer" onclick="$('selectId').value=<%= loc.location_id %>; $('frmMain').action='/location/show'; $('frmMain').submit()">
                    <td>
                        <%= loc.name %>
                    </td>
                    <td>
                        <%= loc.description %>
                    </td>
                </tr>
                
                <% @i += 1 %>
                
            <% } %>                                                
              
              
            <tr>
                <td>
                </td>
                <td>
                </td>
            </tr>  
            <tr>
                <td colspan=2>
                    <hr>
                </td>
            </tr>                                        
        </table>
    
        <%= submit_tag "Back", :onclick => "back()", :class => "smallbutton", :type => "button" %>
        <%= submit_tag "Cancel", :onclick => "$('frmMain').action='/location/index'", :class => "smallbutton" %>
    <% end %>

</center>
